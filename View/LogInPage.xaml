<UserControl x:Class="Drugstore_Application.View.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drugstore_Application.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="18px" TextAlignment="Center" Text="Авторизация&#10;(Логин: admin, пароль: admin)"/>
            <TextBox FontSize="18px" Text="{Binding Login}" Margin="5px 5px 5px 5px"></TextBox>
            <TextBox FontSize="18px"  Text="{Binding Password}" Margin="5px 5px 5px 5px"></TextBox>
            <Button FontSize="18px" Content="Войти" Height="30px"  Margin="5px 5px 5px 5px" Command="{Binding LogIn}"/>
        </StackPanel>
    </Grid>
</UserControl>
