<UserControl x:Class="Drugstore_Application.View.DrugBuyEliminatePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drugstore_Application.View"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="900">
    <Grid>
        <!--Определение строк и столбцов-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.65*"/>
        </Grid.RowDefinitions>

        <!--Заливка ячеек-->
        <Border Grid.Row ="0" Grid.ColumnSpan="3" BorderThickness="3px" BorderBrush="#4B0082" Margin="2px 2px 5px 2px" Background="#ca9aec"/>
        <Border Grid.Row ="0" Grid.Column="3" Grid.ColumnSpan="3" BorderThickness="3px" BorderBrush="#4B0082" Margin="2px 2px 2px 2px" Background="#ca9aec"/>
        <Border Grid.Row ="1" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="3px" BorderBrush="#4B0082" Margin="2px 2px 2px 2px" Background="#ca9aec"/>
        <Border Grid.Row ="2" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="3px" BorderBrush="#4B0082" Margin="2px 2px 2px 2px" Background="#ca9aec"/>
        <Border Grid.Row ="1" Grid.Column="3" Grid.ColumnSpan="3" BorderThickness="3px" BorderBrush="#4B0082" Margin="2px 2px 2px 2px" Background="#ca9aec"/>
        <Border Grid.Row ="2" Grid.Column="3" Grid.ColumnSpan="3" BorderThickness="3px" BorderBrush="#4B0082" Margin="2px 2px 2px 2px" Background="#ca9aec"/>
        <Border Grid.Row ="3" Grid.ColumnSpan="6" BorderThickness="3px" BorderBrush="#4B0082" Margin="2px 2px 2px 2px" Background="#ca9aec"/>

        <!--Поле поиска медикаментов-->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0px 5px 0px 0px" VerticalAlignment="Center">
            <Label Grid.Column="0" Grid.Row="0" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center">Поиск медикаментов</Label>
            <TextBox Margin="15px 0px 15px 0px" Text="{Binding TextSearchDrug, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>

        <!--Списки-->
        <ListView Name="DrugsListView" Grid.Column="0" Grid.Row="1" Margin="10px 10px 10px 10px" Grid.ColumnSpan="3"
        ItemsSource="{Binding FoundDrugs, UpdateSourceTrigger=PropertyChanged}"
        SelectedItem="{Binding SelectedDrug}">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="ID" Width="30px" DisplayMemberBinding="{Binding Path=Id, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Название" Width="100px" DisplayMemberBinding="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Симптомы" Width="90px" DisplayMemberBinding="{Binding Path=Symptoms, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Количество, штук" Width="105px" DisplayMemberBinding="{Binding Path=Count, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Цена, рублей" Width="80px" DisplayMemberBinding="{Binding Path=Price, UpdateSourceTrigger=PropertyChanged}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <ListView Name="TransactionsList" Grid.Column="0" Grid.Row="2" Margin="10px 10px 10px 10px" Grid.ColumnSpan="3"
        ItemsSource="{Binding TransactionsList}">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="ID" Width="30px" DisplayMemberBinding="{Binding Path=Id, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Название" Width="100px" DisplayMemberBinding="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Количество, штук" Width="105px" DisplayMemberBinding="{Binding Path=Count, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Сумма, рублей" Width="90px" DisplayMemberBinding="{Binding Path=Price, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Транзакция" Width="85px" DisplayMemberBinding="{Binding Path=Type, UpdateSourceTrigger=PropertyChanged}"/>
                </GridView>
            </ListView.View>
        </ListView>


        <Button Name="BackButton" Content="Вернуться в окно склада" FontSize="14px" Grid.ColumnSpan="6" Margin="10px 10px 10px 10px" Command="{Binding BackToMain}" Grid.Row="3" Grid.Column="0"></Button>

        <!--Баланс-->
        <Label Grid.Column="3" FontSize="14px" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10px 0px 25px 0px">Баланс (рублей):</Label>
        <TextBox Grid.Column="3" Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="110px 0px 0px 0px" 
         Height="40px" Width="300px"
         TextAlignment="Center" IsReadOnly="True" TextWrapping="Wrap" FontSize="14px" Text="{Binding Balance, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Top">
            <Label FontSize="24px" HorizontalAlignment="Center" Margin="0px 20px 0px 0px">Закупка</Label>
            <Label FontSize="14px" HorizontalAlignment="Center" Margin="0px 0px 0px 0px">(Выберете медикамент из верхнего списка)</Label>
            <Label FontSize="18px" HorizontalAlignment="Center" Margin="0px 20px 0px 0px">Введите количество</Label>
            <TextBox Margin="15px 0px 15px 0px" Width="350px" Height="25px" Text="{Binding BuyCount, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Name="BuyButton" Content="Купить" VerticalAlignment="Bottom" FontSize="14px" Height="30px" Margin="50px 10px 50px 30px" Command="{Binding DrugBuy}"/>
        </StackPanel>

        <StackPanel Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Top">
            <Label FontSize="24px" HorizontalAlignment="Center" Margin="0px 20px 0px 0px">Списание</Label>
            <Label FontSize="14px" HorizontalAlignment="Center" Margin="0px 0px 0px 0px">(Выберете медикамент из верхнего списка)</Label>
            <Label FontSize="18px" HorizontalAlignment="Center" Margin="0px 20px 0px 0px">Введите количество</Label>
            <TextBox Margin="15px 0px 15px 0px" Width="350px" Height="25px" Text="{Binding EliminateCount, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Name="EliminateButton" Content="Списать" VerticalAlignment="Bottom" FontSize="14px" Height="30px" Margin="50px 10px 50px 30px" Command="{Binding DrugEliminate}"/>
        </StackPanel>

    </Grid>
</UserControl>
