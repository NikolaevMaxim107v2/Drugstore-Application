<Window x:Class="Drugstore_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drugstore_Application"
        xmlns:viewmodels="clr-namespace:Drugstore_Application.ViewModel"
        xmlns:views="clr-namespace:Drugstore_Application.View"
        mc:Ignorable="d"
        Title="Электронная система 'Целитель'" WindowStartupLocation="CenterScreen" 
        MinHeight="750" MinWidth="900" 
        MaxHeight="750" MaxWidth="900"
        Height="750" Width="900">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewmodels:StartPageVM}">
                <views:StartPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:LogInPageVM}">
                <views:LoginPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:MainPageVM}">
                <views:MainPage/>
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
